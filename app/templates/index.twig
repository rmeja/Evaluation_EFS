{% extends "layout.twig" %}

{% block content %}
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="{{ url('homepage') }}" class="navbar-brand">Evaluation EFS</a>
      </div>
      <div class="navbar-collapse collapse" id="navbar">
        <ul class="nav navbar-nav">
          <li class="active"><a href="{{ url('homepage') }}">Accueil</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ etape_active ?: 'Etapes' }} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
            {% for etape in etapes %}
              <li><a href="{{ url('homepage', {etape: etape.cod_etp}) }}">{{ etape.lib_etp }}</a></li>
            {% endfor %}
            </ul>
          </li>
          <li class="navbar-text">Total <span class="badge">{{ nombre_etudiant_total }}</span></li>
          <li class="navbar-text">À renseigner <span class="badge">{{ nombre_etudiant_a_renseigner }}</span></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="{{ path('logout') }}">Déconnexion</a></li>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
    <!--/.container-fluid -->
  </nav>
  <div class="dashboard col-md-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>#</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Condition 1</th>
        <th>Condition 2</th>
        <th>Condition 3</th>
        <th>Éditer</th>
      </tr>
      </thead>
      <tbody>
      {% for etudiant in etudiants %}
        <tr {% if etudiant.condition1 == 'remplie' and etudiant.condition2 == 'remplie' and etudiant.condition3 == 'remplie' %} class="success"
            {% elseif etudiant.condition1 == 'non remplie' or etudiant.condition2 == 'non remplie' or etudiant.condition3 == 'non remplie' %} class="danger"
            {% endif %}>
          <th scope="row">{{ loop.index }}</th>
          <td>{{ etudiant.lib_pr1_ind }}</td>
          <td>{{ etudiant.lib_nom_pat_ind }}{% if etudiant.lib_nom_usu_ind is not empty %} ({{ etudiant.lib_nom_usu_ind }}) {% endif %}</td>
          <td>{{ etudiant.condition1|capitalize }}</td>
          <td>{{ etudiant.condition2|capitalize }}</td>
          <td>{{ etudiant.condition3|capitalize }}</td>
          <td>
            <a href="{{ url('form', {'id_etu': etudiant.cod_etu}) }}" class="btn btn-primary">
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            </a>
          </td>
        </tr>
      {% endfor %}

      </tbody>
    </table>
  </div>

{% endblock %}
